<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/layout_selector"
    android:clickable="true"
   >

    <TextView
        android:id="@+id/Joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="20dp"
        android:lines="3"
        android:textColor="@android:color/black"


        >
    </TextView>

    <ImageView
        android:id="@+id/likes"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Joke"
        android:layout_width="34dip"
        android:layout_height="34dip" >
    </ImageView>

    <TextView
        android:id="@+id/TextViewLikes"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_light"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/likes"
        android:layout_below="@+id/Joke"
        android:textSize="20dp"
        android:layout_marginLeft="10dip">
    </TextView>
    <ImageView
        android:id="@+id/dislikes"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/Joke"
        android:layout_toRightOf="@+id/TextViewLikes"
        android:layout_height="34dip"
        android:layout_width="34dip"
        android:layout_marginLeft="10dip">
    </ImageView>
    <TextView
        android:id="@+id/TextViewDislikes"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/dislikes"
        android:layout_below="@+id/Joke"
        android:textSize="20dp"
        android:layout_marginLeft="10dip">

    </TextView>

</RelativeLayout>